# Maintainer: Bernhard Landauer <oberon@manjaro.org>

pkgname=manjaro-sx-wallpapers
pkgver=20170719
pkgrel=1
pkgdesc="Wallpapers for Manjaro SX"
arch=('any')
license=('GPL3')
_repo=project-sx
_commit=c97d3b870b4c38744b14050a633923ab72b5bf2c
url="https://github.com/philmmanjaro/$_repo"
source=("$url/archive/$_commit.tar.gz")
md5sums=('3c1c053597d5d3a22a865fb7e5a57f23')

pkgver() {
    date +%Y%m%d
}

package() {
    cd $_repo-$_commit/$pkgname
    install -dm755 $pkgdir/usr/share
    cp -r * $pkgdir/usr/share
}
