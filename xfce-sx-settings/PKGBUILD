# Maintainer: Bernhard Landauer <oberon@manjaro.org>

pkgname=xfce-sx-settings
pkgver=20170719
pkgrel=2
pkgdesc="Manjaro SX Xfce settings"
arch=('any')
_repo=project-sx
_commit=f380449614b003743aaa99b4d1ba45433c1a5b6e
url="https://github.com/philmmanjaro/$_repo"
license=('GPL3')
depends=('manjaro-sx-wallpapers'
	'manjaro-base-skel'
	'manjaro-sx-icons'
	'qt5ct'
	'qt5-styleplugins'
	'vibrancy-colors'
	'adapta-maia-theme'
	'xcursor-breeze')
conflicts=('manjaro-desktop-settings')
provides=('manjaro-desktop-settings')
source=("$url/archive/$_commit.tar.gz")
md5sums=('0e9ee07da1357395b8fbaee995ba13a9')

pkgver() {
	date +%Y%m%d
}

package() {
	cd $_repo-$_commit/$pkgname
	install -d $pkgdir/etc
	cp -r skel $pkgdir/etc
	install -d $pkgdir/usr/share/glib-2.0/schemas
	cp schemas/* $pkgdir/usr/share/glib-2.0/schemas
}
